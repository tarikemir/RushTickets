@model List<RushTickets.Domain.Entities.Ticket>

<!DOCTYPE html>
<html>
<head>
    <title>List of Tickets</title>
    <!-- Add your styles, scripts, or references here -->
</head>
<body>
    <h1>List of Tickets</h1>

    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                <tr>
                    <td>@ticket.Id</td>
                    <td>@ticket.Name</td>
                    <td>@ticket.Description</td>
                    <td>@ticket.Price</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
